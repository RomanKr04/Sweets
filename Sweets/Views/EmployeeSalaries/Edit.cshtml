@model Sweets.Models.EmployeeSalary

@{
    ViewData["Title"] = "Редактировать зарплату";
}

<h1>Редактировать зарплату</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />



    <div class="mb-3">
        <label asp-for="TotalSalary" class="form-label"></label>
        <input asp-for="TotalSalary" class="form-control" />
        <span class="text-muted">* Можно изменить итоговую сумму</span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
